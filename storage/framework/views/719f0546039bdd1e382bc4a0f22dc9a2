<script type="text/javascript">
    $('div.lecture').click(function(){
        var getId = $(this).attr('getId');
        $('#lecture'+getId).toggleClass('hide');
        $(this).find('span.toggle').toggleClass('glyphicon-triangle-bottom glyphicon-triangle-top');
    });   
</script>

